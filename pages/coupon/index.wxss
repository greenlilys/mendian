/* 新模版 */

.coupons{
    width: 100%;
    height:280rpx;
    position: relative;
    margin-bottom:30rpx;
	
}
.coupon-c .img{
	position:absolute;
	width:174rpx;
	height:120rpx;
	right:40rpx;
	bottom:20rpx;
}
.coupons .coupon-c{
    width:85%;
    height:280rpx;
    border-radius:20rpx 20rpx;
    position: absolute;
    top: 0;
    left:7.5%;	
}
 .coupons .coupon-top{
    color: #FFF;
} 
.coupons .coupon-topl{
    width:30%;
    height:180rpx;
    margin:10% 5% 0 3%;
    position: relative;
    border-right:2rpx dashed #FFF;
}
.coupons .coupon-topr{
    width:56%;
    margin-top:10%;
}
.coupons .coupon-topl,.coupon .coupon-topr{
    float: left;
}
.coupons .fuhao{
    font-size:18pt;
    float: left;
    position: absolute;
    top:10%;
    left:5%;
}
.coupons .price{
    width:100%;
    text-align: center;
    font-size:27pt;
    float:left;
    position: absolute;
    top:25%;
}
.coupons .bt{
    font-size:16pt;
    display: block;
    margin-left: 20rpx;
}
.coupons .coupon-c .coupon-top .coupon-topr .bt .limit,.coupon-topr .bt .tiaojian{
    font-size:9pt;
}
.coupons .day{
    font-size:9pt;
    color: rgba(255,255,255,0.8);
    display: block;
    margin:15rpx 0 0 20rpx;
}
.coupons .coupon-fot button{
    width:40%;
    height:60rpx;
    line-height:60rpx;
    position: absolute;
    bottom:12%;
    left:42%;
    text-align: center;
    border:1px solid #FFF;
    border-radius: 30rpx 30rpx;
    background:none; 
    font-size:11pt;
    color:#FFF;
}
.coupons .line{
    float: left;
    width: 5rpx;
    height:60rpx;
    border: 0;
    background: #FFF;
    transform:rotate(20deg);
    position: absolute;
    bottom:18%;
    right:34%;
}
.coupons .prices{
    width: 70%;
    text-align: center;
    font-size:30pt;
    position: absolute;
    top:15%;
}
.coupons .zhekou{
    float: left;
    font-size:14pt;
    position: absolute;
    bottom:10%;
    right:12%;
}
.technology{
	width:100%;
	font-size:8pt;
	color:#ccc;	
	text-align:center;
	padding-top:40rpx;
}